<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tarzan.maxkb4j.module.knowledge.mapper.ProblemParagraphMapper">

    <select id="getProblems" resultType="com.tarzan.maxkb4j.module.knowledge.domain.vo.ProblemParagraphVO">
        SELECT
        ppm.ID,
        P."content",
        ppm.knowledge_id,
        ppm.document_id,
        ppm.paragraph_id,
        ppm.problem_id
        FROM
        problem_paragraph_mapping ppm
        LEFT JOIN problem P ON P.ID = ppm.problem_id
        <where>
            <if test="knowledgeId != null and knowledgeId != ''">
                AND ppm.knowledge_id =   #{knowledgeId}
            </if>
            <if test="docIds != null and docIds.size() > 0">
                AND ppm.document_id IN
                <foreach item="docId" collection="docIds" open="(" separator="," close=")">
                    #{docId}
                </foreach>
            </if>
        </where>
    </select>
    <select id="getProblemsByParagraphId" resultType="com.tarzan.maxkb4j.module.knowledge.domain.entity.ProblemEntity">
        SELECT
            P.ID,
            P."content"
        FROM
            problem_paragraph_mapping ppm
                INNER  JOIN problem P ON P.ID = ppm.problem_id
        WHERE ppm.paragraph_id =   #{paragraphId}
    </select>

</mapper>
